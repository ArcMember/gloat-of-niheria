// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  login     String  @unique
  role      String  @default("user")
  password  String
}

model Page {
  title   String
  url     String @unique
  content String
  mtime   String
}

model GalleryImage {
  title   String
  url     String @unique
}

model MagicRune {
  name                String @unique
  baseName            String @unique
  src                 String
  branch              String
  description         String
  advancedDescription String        
}

model CharacterCanon {
  id  Int @id @default(autoincrement())
  name        String @unique
  subtitle    String?
  filter      String?
  href        String?
  src         String?
  author      String?
  age         String?
  nation      String?
  class       String?
  occupation  String?
  quests      String?
}

model CharacterHero {
  id  Int @id @default(autoincrement())
  name        String @unique
  subtitle    String?
  filter      String?
  href        String?
  src         String?
  age         String?
  nation      String?
  class       String?
  player      String?
  occupation  String?
  quests      String?
  relations   FactionRelation?
}

model FactionRelation {
  hero CharacterHero? @relation(fields: [heroId], references: [id])
  heroId Int @unique
  RT  String
  TY  String
  AF  String
  LT  String
  KF  String
  MW  String
  FL  String
  SX  String
  SK  String
  KL  String
  HL  String
}